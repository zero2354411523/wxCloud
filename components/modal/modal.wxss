/* components/modalMask/modalMask.wxss */
.mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.4);
  z-index: 999999;
}
.close-icon{
  position: absolute;
  top: 13rpx;
  right: 13rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  color: #ccc;
  font-size: 48rpx;
  font-weight: lighter
}
.center{
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  width: 80%;
  /* padding: 50rpx; */
  box-sizing: border-box;
  border-radius: 10rpx;
  animation: up-show 0.3s
}
@keyframes up-show{
  from{top:150%;}
  to{top: 30%;}
}
